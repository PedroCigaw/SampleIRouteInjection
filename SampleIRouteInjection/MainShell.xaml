<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleIRouteInjection.MainShell"
             xmlns:local="clr-namespace:SampleIRouteInjection"
             Title="MainShell">

    <ShellItem Route="LoginView">
        <ShellContent ContentTemplate="{DataTemplate local:LoginView}" />
    </ShellItem>

    <FlyoutItem Title="Default" Route="Default">
        <Tab Title="Default">
            <local:MainPage />
        </Tab>
    </FlyoutItem>
</Shell>